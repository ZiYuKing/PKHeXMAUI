<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKHeXMAUI.comboBox"
             x:Name="ThisView"
             Shell.PresentationMode="Modal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Entry x:Name="entry" TextChanged="entry_textChanged" Focused="ShowList" Completed="AutoCompleteText"/>
        <Button Grid.Column="1" Text="X" Clicked="ClearText" BackgroundColor="Transparent" BorderColor="Transparent"/>
        <ListView Grid.Row="1" x:Name="picker" ItemSelected="IndexChanged" IsVisible="False" HeightRequest="100" SelectionMode="Single" VerticalOptions="End" ItemsSource="{Binding ItemSource,Source={x:Reference ThisView}}"/>
    </Grid>
</ContentView>
