<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKHeXMAUI.comboBox"
             x:Name="ThisView">
    <Grid ColumnDefinitions="2*,*" x:Name="G">
        <Entry x:Name="entry" TextChanged="entry_textChanged" Focused="ShowList" Completed="AutoCompleteText"/>
        <Button Grid.Column="1" Text="X" Clicked="ClearText" BackgroundColor="Transparent" BorderColor="Transparent"/>
    </Grid>
</ContentView>
