<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKHeXMAUI.NumericUpDown"
             x:Name="ThisView">
    <Border>
        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
            <Entry x:Name="E_Number" Grid.RowSpan="2" Keyboard="Numeric" VerticalOptions="Center" TextChanged="EnforceLimitations"/>
            <Button x:Name="BTN_Up" Grid.Column="1" Clicked="Increase" Text="▲"/>
            <Button x:Name="BTN_Down" Grid.Column="1" Grid.Row="1" Clicked="Decrease" Text="▼"/>
        </Grid>
    </Border>
</ContentView>
