<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKHeXMAUI.MiscMainEditor"
             Title="Main">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnDefinitions="*,*">
            <Label x:Name="L_BP" Text="BP:"/>
            <Entry x:Name="E_BP" Grid.Column="1" Keyboard="Numeric"/>
            <Label x:Name="L_EarnedBP" Text="Earned BP:" Grid.Row="1"/>
            <Entry x:Name="E_EarnedBP" Grid.Row="1" Grid.Column="1"/>
            <Label x:Name="L_Coins" Text="Coins:" Grid.Row="2"/>
            <Entry x:Name="E_Coins" Grid.Row="2" Grid.Column="1"/>
            <Label x:Name="L_Rival" Text="Rival Name:" Grid.Row="3"/>
            <Entry x:Name="E_Rival" Grid.Row="3" Grid.Column="1"/>
            <Label x:Name="L_TrainerCards" Grid.Row="4" Text="Trainer Card Pokemon Icons"/>
        </Grid>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*">
            <Picker x:Name="P_TCM1"/>
            <Picker x:Name="P_TCM2" Grid.Column="1"/>
            <Picker x:Name="P_TCM3" Grid.Column="2"/>
            <Picker x:Name="P_TCM4" Grid.Row="1"/>
            <Picker x:Name="P_TCM5" Grid.Row="1" Grid.Column="1"/>
            <Picker x:Name="P_TCM6" Grid.Row="1" Grid.Column="2"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>